<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.spec.auth.MainActivity">

    <TextView
        android:id="@+id/MyoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Hello! Please enter your credentials... OR Use another authencation method." />

    <EditText
        android:id="@+id/username"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="username" />

    <EditText
        android:id="@+id/password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"/>

    <Button
        android:id="@+id/submit"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:onClick="SubmitButton"
        android:text="Submit"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:onClick="useMyo"
        android:layout_gravity="center"
        android:padding="10dp"
        android:text="Use Myo device"/>

</LinearLayout>
